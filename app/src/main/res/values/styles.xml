<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--NoActionBar-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="titlebar_title">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/dp1080_50</item>
    </style>

    <style name="titlebar_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp1080_30</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--bottombar样式-->
    <style name="main_bottombar_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--bottombar 图片样式-->
    <style name="main_fragment_bottombar_iv">
        <item name="android:layout_width">@dimen/dp1080_70</item>
        <item name="android:layout_height">@dimen/dp1080_70</item>
        <item name="android:layout_margin">@dimen/dp1080_5</item>
    </style>

    <!--bottombar 文字样式-->
    <style name="main_fragment_bottombar_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp1080_35</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black_66</item>
    </style>

    <style name="paychoose_icon">
        <item name="android:layout_width">@dimen/dp1080_100</item>
        <item name="android:layout_height">@dimen/dp1080_100</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/color_black_66</item>
        <item name="android:layout_margin">@dimen/dp1080_40</item>
    </style>

    <style name="paychoose_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/dp1080_40</item>
        <item name="android:textColor">@color/color_black_66</item>
    </style>

    <style name="paychoose_iv_choose">
        <item name="android:layout_width">@dimen/dp1080_45</item>
        <item name="android:layout_height">@dimen/dp1080_45</item>
        <item name="android:background">@color/color_black_66</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp1080_50</item>
    </style>

    <style name="paychoose_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/select_view</item>
        <item name="android:layout_marginBottom">@dimen/dp1080_4</item>
    </style>

    <!--模板相关-->

    <!--登录三方icon-->
    <style name="login_sanfang_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dp1080_60</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="login_et_string">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/dp1080_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color_gray_ee</item>
    </style>

    <style name="login_white_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1080_1</item>
        <item name="android:paddingLeft">@dimen/dp1080_30</item>
        <item name="android:paddingRight">@dimen/dp1080_30</item>
    </style>

    <style name="login_btn">
        <item name="android:layout_width">@dimen/dp1080_700</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp1080_30</item>
        <item name="android:paddingBottom">@dimen/dp1080_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp1080_50</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_marginTop">@dimen/dp1080_50</item>
    </style>

    <style name="main_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/color_gray_cc</item>
    </style>

    <style name="bank_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp1080_42</item>
        <item name="android:textColor">@color/color_black_66</item>
        <item name="android:layout_below">@+id/iv_x</item>
        <item name="android:layout_marginRight">@dimen/dp1080_22</item>
        <item name="android:layout_marginBottom">@dimen/dp1080_32</item>
        <item name="android:paddingLeft">@dimen/dp1080_40</item>
        <item name="android:paddingRight">@dimen/dp1080_40</item>
        <item name="android:paddingTop">@dimen/dp1080_16</item>
        <item name="android:paddingBottom">@dimen/dp1080_16</item>
    </style>

    <!--大图轮播-->
    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#00aaaaaa</item>
        <!-- 指示点背景 不需要-->
        <!--<item name="banner_pointDrawable">@drawable/selector_banner_point</item>-->
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@color/color_gray</item>
        <!--动画效果-->
        <item name="banner_transitionEffect">alpha</item>
    </style>

</resources>
