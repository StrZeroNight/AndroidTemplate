<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp1080_20"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp1080_30">

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="@dimen/dp1080_50"
        android:layout_height="@dimen/dp1080_50"
        android:layout_marginRight="@dimen/dp1080_20"
        android:src="@drawable/cart_choose_no"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp1080_240"
        android:layout_height="@dimen/dp1080_240"
        android:scaleType="fitXY"/>

</LinearLayout>