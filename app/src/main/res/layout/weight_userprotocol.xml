<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp1080_40"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_select"
        android:drawablePadding="@dimen/dp1080_20"
        android:gravity="center"
        android:paddingBottom="@dimen/dp1080_20"
        android:paddingLeft="@dimen/dp1080_70"
        android:paddingTop="@dimen/dp1080_20"
        android:text="已阅读并同意"
        android:textColor="@color/color_33"
        android:textSize="@dimen/dp1080_35" />

    <TextView
        android:id="@+id/tv_agrament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dp1080_20"
        android:paddingTop="@dimen/dp1080_20"
        android:text="《用户协议》"
        android:textColor="@color/orange_ed683d"
        android:textSize="@dimen/dp1080_35" />

</LinearLayout>
