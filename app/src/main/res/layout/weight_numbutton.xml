<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_reduce"
        android:layout_width="@dimen/dp1080_70"
        android:layout_height="@dimen/dp1080_70"
        android:src="@drawable/num_reduce"
        android:padding="@dimen/dp1080_20"/>

    <TextView
        android:id="@+id/custom_numbutton_tv_num"
        android:layout_width="@dimen/dp1080_120"
        android:layout_height="@dimen/dp1080_50"
        android:gravity="center"
        android:text="1" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dp1080_70"
        android:layout_height="@dimen/dp1080_70"
        android:src="@drawable/num_add"
        android:padding="@dimen/dp1080_20"/>

</LinearLayout>