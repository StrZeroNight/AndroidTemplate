<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_farme4"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_reduce"
        android:layout_width="@dimen/dp1080_76"
        android:layout_height="@dimen/dp1080_76"
        android:src="@drawable/jian"
        android:padding="@dimen/dp1080_20"/>

    <TextView
        android:id="@+id/custom_numbutton_tv_num"
        android:layout_width="@dimen/dp1080_120"
        android:layout_height="@dimen/dp1080_76"
        android:gravity="center"
        android:background="@drawable/main_farme"
        android:text="1" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dp1080_76"
        android:layout_height="@dimen/dp1080_76"
        android:src="@drawable/jia"
        android:padding="@dimen/dp1080_20"/>

</LinearLayout>