<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp1080_433"
    android:orientation="horizontal"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="@dimen/dp1080_120"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="@dimen/dp1080_48"
            android:layout_height="@dimen/dp1080_48"
            android:src="@drawable/cart_choose_no"
            android:layout_marginLeft="@dimen/dp1080_45"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp1080_281"
        android:layout_height="@dimen/dp1080_281"
        android:layout_marginRight="@dimen/dp1080_40"
        android:background="@color/color_f5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_281">

        <TextView
            android:id="@+id/tv_proname"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dp1080_45"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textSize="@dimen/dp1080_39"
            android:textColor="@color/color_22"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/proparams"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dp1080_45"
            android:layout_height="wrap_content"
            android:text="规格"
            android:textSize="@dimen/dp1080_33"
            android:textColor="@color/color_99"
            android:layout_marginTop="@dimen/dp1080_31"
            android:layout_below="@+id/tv_proname"
            android:ellipsize="end"
            android:singleLine="true"
            />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_price"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/dp1080_54"
            android:textColor="@color/colorPrimary"
            />

        <com.zeronight.templet.common.widget.NumButtom
            android:id="@+id/numbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp1080_45"/>

    </RelativeLayout>

</LinearLayout>