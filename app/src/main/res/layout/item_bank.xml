<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_view"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/dp1080_3"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_bank_icon"
        android:layout_width="@dimen/dp1080_100"
        android:layout_height="@dimen/dp1080_100"
        android:layout_marginBottom="@dimen/dp1080_40"
        android:layout_marginLeft="@dimen/dp1080_60"
        android:layout_marginTop="@dimen/dp1080_40"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp1080_40"
        android:paddingLeft="@dimen/dp1080_20"
        android:text="银行名"
        android:textColor="@color/color_gray_99"
        android:textSize="@dimen/dp1080_35" />

</LinearLayout>