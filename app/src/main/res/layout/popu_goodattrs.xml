            android:id="@+id/stv_addtocart2"
            android:layout_width="@dimen/dp1080_300"
            android:layout_height="@dimen/dp1080_90"
            android:gravity="center"
            android:text="加入购物车"
            android:textSize="@dimen/dp1080_36"
            android:textColor="@color/color_white"
            app:round="true"
            android:clickable="true"
            android:layout_marginRight="@dimen/dp1080_20"
