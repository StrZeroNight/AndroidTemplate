<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_365"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1080_280"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/dp1080_360"
            android:layout_height="@dimen/dp1080_360"
            android:layout_marginLeft="@dimen/dp1080_40"
            android:background="@color/color_white"
            android:elevation="@dimen/dp1080_3"
            android:padding="@dimen/dp1080_15"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="@dimen/dp1080_40"
            />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/dp1080_100"
            android:layout_height="@dimen/dp1080_100"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp1080_40"
            android:background="@color/color_black"
            android:layout_marginTop="@dimen/dp1080_80"
            />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称商品名称商品名称商品名称商品名称"
            android:maxLines="2"
            android:minLines="2"
            android:layout_toRightOf="@+id/iv_pic"
            android:textSize="@dimen/dp1080_34"
            android:textColor="@color/color_33"
            android:layout_marginBottom="@dimen/dp1080_33"
            android:layout_above="@+id/tv_price2"
            />

        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:layout_toRightOf="@+id/iv_pic"
            android:textSize="@dimen/dp1080_42"
            android:layout_alignParentBottom="true"
            android:textColor="@color/red_ff5200"
            />

        <TextView
            android:id="@+id/tv_store2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp1080_260"
            android:textSize="@dimen/dp1080_28"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp1080_54"
            android:textColor="@color/color_66"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_40"
        android:background="@color/color_white"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_attrs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_500"
        android:background="@color/color_f5"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_5"
        android:background="@color/color_f5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp1080_36"
            android:textColor="@color/color_33"
            android:paddingLeft="@dimen/dp1080_40"
            android:paddingTop="@dimen/dp1080_60"
            android:paddingBottom="@dimen/dp1080_60"
            />

        <com.zeronight.templet.common.widget.NumButtom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp1080_40"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_5"
        android:background="@color/color_f5"
        />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white">

