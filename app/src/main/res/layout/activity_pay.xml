<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zeronight.templet.common.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <com.zeronight.templet.common.widget.PayOrderText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:atitle="订单编号"
            />

        <com.zeronight.templet.common.widget.PayOrderText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:atitle="下单时间"/>

        <com.zeronight.templet.common.widget.PayOrderText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:atitle="商品总价"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/dp1080_40"
                android:text="实付款"
                android:padding="@dimen/dp1080_40"
                />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red"
                android:textStyle="bold"
                android:textSize="@dimen/dp1080_45"
                android:text="0.00"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp1080_40"
                />

        </RelativeLayout>

        <com.zeronight.templet.common.widget.PayChoose
            android:id="@+id/paychoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.zeronight.templet.common.widget.SuperTextView
            android:id="@+id/stv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认支付"
            android:layout_marginTop="@dimen/dp1080_100"
            />

    </LinearLayout>

</LinearLayout>