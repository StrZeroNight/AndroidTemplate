<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp1080_70"
            android:layout_height="@dimen/dp1080_70"
            android:layout_marginBottom="@dimen/dp1080_34"
            android:layout_marginLeft="@dimen/dp1080_67"
            android:layout_marginTop="@dimen/dp1080_34"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp1080_40"
            android:text="观众姓名"
            android:textColor="@color/color_66"
            android:textSize="@dimen/dp1080_34" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp1080_43"
        android:layout_marginRight="@dimen/dp1080_43"
        android:paddingBottom="@dimen/dp1080_44"
        android:paddingTop="@dimen/dp1080_44"
        android:text=""
        android:paddingLeft="@dimen/dp1080_30"
        android:paddingRight="@dimen/dp1080_30"
        android:background="@drawable/main_farme"
        android:textColor="@color/color_66"
        android:textSize="@dimen/dp1080_34" />

</LinearLayout>