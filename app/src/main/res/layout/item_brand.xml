<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/dp1080_2"
    android:id="@+id/rl_root"
    android:background="@drawable/select_view"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌名"
        android:textSize="@dimen/dp1080_40"
        android:textColor="@color/color_99"
        android:padding="@dimen/dp1080_50"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="@dimen/dp1080_33"
        android:layout_height="@dimen/dp1080_33"
        android:layout_marginRight="@dimen/dp1080_60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/select"
        />

</RelativeLayout>