<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改购买数量"
        android:textSize="@dimen/dp1080_45"
        android:textColor="@color/color_black_33"
        android:gravity="center"
        android:padding="@dimen/dp1080_30"
        />

    <LinearLayout
        android:id="@+id/ll_num_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal">

        <ImageButton
            android:id="@+id/ib_minus_cargoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp1080_15"
            android:src="@drawable/num_reduce" />

        <EditText
            android:id="@+id/et_num_change"
            android:textSize="@dimen/dp1080_45"
            android:textColor="@color/color_black_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minEms="2"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:inputType="number"
            android:paddingLeft="@dimen/dp1080_10"
            android:paddingRight="@dimen/dp1080_10"
            android:minWidth="@dimen/dp1080_80"
            android:text="1" />

        <ImageButton
            android:id="@+id/ib_plus_cargoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp1080_15"
            android:src="@drawable/num_add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp1080_20"
        >

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/dialog_btn"
            android:text="取消"
            />

        <TextView
            android:id="@+id/tv_sure"
            style="@style/dialog_btn"
            android:text="确定"
            android:textColor="@color/color_white"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>

</LinearLayout>