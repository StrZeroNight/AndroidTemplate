<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="@dimen/dp1080_120"
    android:id="@+id/titlebar"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/tv_title"
        android:text="标题"
        style="@style/titlebar_title" />

    <ImageView
        android:id="@+id/iv_back"
        style="@style/titlebar_back" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字"
        android:paddingLeft="@dimen/dp1080_40"
        android:paddingRight="@dimen/dp1080_40"
        android:paddingTop="@dimen/dp1080_10"
        android:paddingBottom="@dimen/dp1080_10"
        android:textSize="@dimen/dp1080_35"
        android:textColor="@color/color_white"
        android:layout_alignBottom="@+id/iv_back"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>