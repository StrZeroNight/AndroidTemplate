<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐方式"
        android:layout_marginTop="@dimen/dp1080_70"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp1080_35"
        android:drawableLeft="@drawable/login_line"
        android:drawableRight="@drawable/login_line"
        android:drawablePadding="@dimen/dp1080_30"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_qq"
            android:src="@drawable/login_qq"
            style="@style/login_sanfang_icon" />

        <ImageView
            android:id="@+id/iv_wx"
            style="@style/login_sanfang_icon"
            android:src="@drawable/login_wx"
            />

        <ImageView
            android:id="@+id/iv_wb"
            style="@style/login_sanfang_icon"
            android:src="@drawable/login_wb"
            />

    </LinearLayout>


</LinearLayout>