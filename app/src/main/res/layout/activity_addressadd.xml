<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--这里等统一的出来以后直接调整det和art-->
    <com.zeronight.templet.common.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:btitle="新增收货地址" />

    <com.zeronight.templet.common.widget.AddressText
        android:id="@+id/addt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:at_hint="请填写收货人"
        app:at_title="收货人"
        app:at_viewType="edit" />

    <com.zeronight.templet.common.widget.AddressText
        android:id="@+id/addt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:at_hint="请填写号码"
        app:at_textType="phone"
        app:at_title="手机号码"
        app:at_viewType="edit" />

    <com.zeronight.templet.common.widget.AddressText
        android:id="@+id/addt_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:at_hint="请选择收货地址"
        app:at_title="所在城市"
        android:clickable="true"
        app:at_viewType="text" />

    <com.zeronight.templet.common.widget.AddressText
        android:id="@+id/addt_detial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:at_hint="请填写详细地址"
        app:at_title="详细地址"
        app:at_viewType="edit" />

    <com.zeronight.templet.common.widget.AddressText
        android:id="@+id/addt_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:at_textType="phone"
        app:at_title="是否默认地址"
        app:at_viewType="switchs" />

    <com.zeronight.templet.common.widget.SuperTextView
        android:id="@+id/stv_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp1080_20"
        android:gravity="center"
        android:padding="@dimen/dp1080_30"
        android:text="保存地址"
        android:clickable="true"
        android:textColor="@color/color_white"
        app:normalBackgroundColor="@color/color_33"
        app:pressedBackgroundColor="@color/color_black_33_tran70" />

</LinearLayout>