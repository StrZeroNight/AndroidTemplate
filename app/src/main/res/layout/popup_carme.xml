<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp1080_30"
        android:background="@drawable/shape_btn_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_carme"
            android:textColor="@color/color_33"
            android:textSize="@dimen/dp1080_45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp1080_30"
            android:text="拍照" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1080_1"
            android:background="@color/color_cc"/>

        <TextView
            android:id="@+id/tv_image"
            android:textColor="@color/color_33"
            android:textSize="@dimen/dp1080_45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp1080_30"
            android:text="从手机相册选择" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:textColor="@color/color_8c"
        android:textSize="@dimen/dp1080_45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp1080_30"
        android:background="@drawable/shape_btn_white"
        android:gravity="center"
        android:padding="@dimen/dp1080_30"
        android:text="取消" />

</LinearLayout>