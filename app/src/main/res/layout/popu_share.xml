<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp1080_30">

        <ImageView
            android:id="@+id/iv_back_share"
            android:layout_width="@dimen/dp1080_60"
            android:layout_height="@dimen/dp1080_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:padding="@dimen/dp1080_15"
            android:src="@drawable/icon15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请选择您的分享方式"
            android:textColor="@color/color_66"
            android:textSize="@dimen/dp1080_45" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_2"
        android:background="@color/color_ee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_300"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weixin_share"
            style="@style/mine_tv"
            android:layout_marginLeft="@dimen/dp1080_50"
            android:drawableTop="@drawable/share1"
            android:text="微信" />

        <TextView
            android:id="@+id/tv_friend_share"
            style="@style/mine_tv"
            android:layout_marginRight="@dimen/dp1080_50"
            android:drawableTop="@drawable/share2"
            android:text="朋友圈" />

    </LinearLayout>

</LinearLayout>