<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/dp1080_35">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp1080_60"
        android:layout_height="@dimen/dp1080_60"
         />

    <EditText
        android:id="@+id/et_content"
        style="@style/login_et_string"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp1080_30"
        android:layout_toLeftOf="@+id/tv_getvercode"
        android:layout_toRightOf="@+id/iv_icon"
        android:hint="请输入验证码"
        android:maxLength="10"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_getvercode"
        android:layout_width="@dimen/dp1080_200"
        android:layout_height="@dimen/dp1080_80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp1080_20"
        android:background="@drawable/wbtn_t50"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp1080_35"/>

</RelativeLayout>
