<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_695"
                android:background="@drawable/bg4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp1080_55">

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="@dimen/dp1080_128"
                        android:layout_height="@dimen/dp1080_128"
                        android:clickable="true"
                        android:padding="@dimen/dp1080_34"
                        android:src="@drawable/ic16" />

                    <ImageView
                        android:id="@+id/iv_info"
                        android:layout_width="@dimen/dp1080_128"
                        android:layout_height="@dimen/dp1080_128"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:paddingBottom="@dimen/dp1080_35"
                        android:paddingLeft="@dimen/dp1080_40"
                        android:paddingRight="@dimen/dp1080_40"
                        android:paddingTop="@dimen/dp1080_35"
                        android:src="@drawable/ic18" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp1080_120"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/dp1080_210"
                        android:layout_height="@dimen/dp1080_210">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_whiteo" />

                        <ImageView
                            android:id="@+id/iv_header"
                            android:layout_width="@dimen/dp1080_200"
                            android:layout_height="@dimen/dp1080_200"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_whiteo" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1080_23"
                        android:text="手机号"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/dp1080_42" />

                    <com.zeronight.templet.common.widget.SuperTextView
                        android:id="@+id/stv_level"
                        android:layout_width="@dimen/dp1080_250"
                        android:layout_height="@dimen/dp1080_50"
                        android:layout_marginTop="@dimen/dp1080_25"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp1080_50"
                        android:paddingRight="@dimen/dp1080_50"
                        android:text="大掌柜"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/dp1080_30"
                        app:normalBackgroundColor="@color/color_white"
                        app:pressedBackgroundColor="@color/color_white"
                        app:round="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1080_127"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_black_t70"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_reward"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp1080_20"
                            android:text="我的创业基金"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/dp1080_36" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp1080_20"
                            android:text="0.00"
                            android:textColor="@color/red_fffd6f"
                            android:textSize="@dimen/dp1080_42" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_withdrawals"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp1080_20"
                            android:drawablePadding="@dimen/dp1080_30"
                            android:text="我要提现"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/dp1080_36" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_banner_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_146"
                android:layout_marginBottom="@dimen/dp1080_20"
                android:layout_marginTop="@dimen/dp1080_15"
                android:background="@color/color_f3"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_121"
                android:layout_marginBottom="@dimen/dp1080_2"
                android:background="@color/color_white"
                android:gravity="center"
                android:paddingLeft="@dimen/dp1080_380"
                android:paddingRight="@dimen/dp1080_380"
                android:text="我的特权"
                android:textColor="@color/color_22"
                android:textSize="@dimen/dp1080_42" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_260"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_privilege_1"
                    style="@style/mine_tv"
                    android:clickable="true"
                    android:text="小掌柜" />

                <TextView
                    android:id="@+id/tv_privilege_2"
                    style="@style/mine_tv"
                    android:clickable="true"
                    android:text="大掌柜" />

                <TextView
                    android:id="@+id/tv_privilege_3"
                    style="@style/mine_tv"
                    android:clickable="true"
                    android:text="推广大使" />

                <TextView
                    android:id="@+id/tv_privilege_4"
                    style="@style/mine_tv"
                    android:clickable="true"
                    android:text="创业基金" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_banner_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_146"
                android:layout_marginBottom="@dimen/dp1080_20"
                android:layout_marginTop="@dimen/dp1080_15"
                android:background="@color/color_f5"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp1080_3"
                android:background="@drawable/select_view"
                android:clickable="true"
                android:paddingBottom="@dimen/dp1080_53"
                android:paddingLeft="@dimen/dp1080_35"
                android:paddingTop="@dimen/dp1080_53"
                android:text="全部订单"
                android:textColor="@color/color_22"
                android:textSize="@dimen/dp1080_42" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_260"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_1"
                    style="@style/mine_tv1"
                    android:clickable="true"
                    android:text="待付款" />

                <TextView
                    android:id="@+id/tv_order_2"
                    style="@style/mine_tv1"
                    android:clickable="true"
                    android:text="待发货" />

                <TextView
                    android:id="@+id/tv_order_3"
                    style="@style/mine_tv1"
                    android:clickable="true"
                    android:text="待收货" />

                <TextView
                    android:id="@+id/tv_order_4"
                    style="@style/mine_tv1"
                    android:clickable="true"
                    android:text="退款/售后" />

            </LinearLayout>

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1080_20"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="我的资料" />

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_changephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="修改手机号" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.zeronight.templet.common.widget.ArrorText
                        android:id="@+id/at_myorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:aishow_content="false"
                        app:atitle="我的订单" />

                    <com.zeronight.templet.common.widget.ArrorText
                        android:id="@+id/at_reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:aishow_content="false"
                        app:atitle="我的创业基金"
                        app:aishow_point="true"/>

                    <com.zeronight.templet.common.widget.ArrorText
                        android:id="@+id/at_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:aishow_content="false"
                        app:atitle="我的分享"
                        app:aishow_point="true"/>

                </LinearLayout>

                <!-- 创业基金的弹窗 -->
                <RelativeLayout
                    android:layout_width="@dimen/dp1080_505"
                    android:layout_height="@dimen/dp1080_132"
                    android:layout_marginTop="@dimen/dp1080_80"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp1080_117"
                    >

                </RelativeLayout>

                <!-- 我的分享弹窗 -->
                <RelativeLayout
                    android:id="@+id/rl_tip"
                    android:layout_width="@dimen/dp1080_505"
                    android:layout_height="@dimen/dp1080_132"
                    android:layout_marginTop="@dimen/dp1080_220"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:layout_marginRight="@dimen/dp1080_117"
                    >

                </RelativeLayout>

            </RelativeLayout>

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_privilege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="我的特权" />

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_tweetcenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="推客中心" />

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="关于平台" />

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_merchantentry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="商家入驻" />

            <com.zeronight.templet.common.widget.ArrorText
                android:id="@+id/at_newuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:aishow_content="false"
                app:atitle="新手上路" />

            <ImageView
                android:id="@+id/iv_banner_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_146"
                android:layout_marginBottom="@dimen/dp1080_20"
                android:layout_marginTop="@dimen/dp1080_15"
                android:background="@color/color_f5"
                android:clickable="true" />

            <com.zeronight.templet.common.widget.SuperTextView
                android:id="@+id/stv_confirm"
                android:layout_width="@dimen/dp1080_460"
                android:layout_height="@dimen/dp1080_110"
                android:layout_marginBottom="@dimen/dp1080_110"
                android:layout_marginTop="@dimen/dp1080_60"
                android:clickable="true"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dp1080_45"
                app:normalBackgroundColor="@color/colorPrimary"
                app:radius="@dimen/dp1080_10" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>