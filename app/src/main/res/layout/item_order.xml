<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp1080_20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp1080_50"
            android:paddingLeft="@dimen/dp1080_32"
            android:paddingTop="@dimen/dp1080_50"
            android:text="订单编号"
            android:textColor="@color/color_99"
            android:textSize="@dimen/dp1080_42" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp1080_50"
            android:paddingRight="@dimen/dp1080_50"
            android:paddingTop="@dimen/dp1080_50"
            android:text="状态"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp1080_42" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp1080_50"
            android:paddingLeft="@dimen/dp1080_32"
            android:paddingTop="@dimen/dp1080_50"
            android:text="共0件商品 合计: "
            android:textColor="@color/color_99"
            android:textSize="@dimen/dp1080_36" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp1080_60"
            android:paddingBottom="@dimen/dp1080_50"
            android:paddingLeft="@dimen/dp1080_32"
            android:paddingTop="@dimen/dp1080_50"
            android:text="￥ 0.00"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp1080_54" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp1080_50"
            android:paddingRight="@dimen/dp1080_50"
            android:paddingTop="@dimen/dp1080_50"
            android:text="含运费"
            android:textColor="@color/color_99"
            android:textSize="@dimen/dp1080_36" />

    </LinearLayout>

    <com.zeronight.templet.common.widget.OrderButton
        android:id="@+id/ob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>